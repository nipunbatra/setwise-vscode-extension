{
    "comments": {
        "lineComment": "#",
        "blockComment": ["\"\"\"", "\"\"\""]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["$", "$"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["$", "$"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^\\s*.*[:\\[\\{]\\s*$",
        "decreaseIndentPattern": "^\\s*[\\]\\}].*$"
    },
    "folding": {
        "markers": {
            "start": "^\\s*#.*(?:TODO|FIXME|NOTE)",
            "end": "^\\s*#.*(?:END|DONE)"
        }
    }
}